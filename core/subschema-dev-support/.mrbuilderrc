{
  "presets": [
    "mrbuilder-preset-babel-7",
    "mrbuilder-preset-lib",
    "subschema"
  ],
  "plugins": [
    [
      "mrbuilder-plugin-typescript",
      false
    ]
  ],
  "env": {
    "mocha": {
      "presets": [
        "mrbuilder-preset-test"
      ]
    },
    "karma": {
      "presets": [
        "mrbuilder-preset-test"
      ]
    },
    "production": {
      "plugins": [
        [
          "mrbuilder-plugin-clean",
          {
            "paths": [
              "./lib"
            ]
          }
        ],
        [
          "mrbuilder-plugin-chunk",
          false
        ],
        [
          "mrbuilder-plugin-uglify",
          false
        ]
      ]
    },
    "test": {
      "presets": [
        "mrbuilder-preset-test"
      ],
      /*"plugins": [
        [
          "mrbuilder-plugin-karma",
          {
            "include": [
              "/.*\/src\//",
              "./test"
            ]
          }
        ]
      ]*/
    }
  }
}
